{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],

        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "noEmit": true,

        "jsx": "react-jsx",
        "jsxImportSource": "react", // <— para que TS conozca el namespace JSX
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Absolute imports */
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src", "typescript-complements"],
    "exclude": ["node_modules", "dist"] // <— carpetas que no deben ser tipadas
}
